<resources>

    <!--
        Base application theme for API 14+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 14+ devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- API 14 theme customizations can go here. -->
    </style>

    <style name="DarkTheme" parent="android:Theme.Holo">
        <item name="textView1Size">22sp</item>
        <item name="textView2Size">20sp</item>
        <item name="textView3Size">18sp</item>
        <item name="textView1Color">#45D0FF</item>
        <item name="textView2Color">#75DDFF</item>
        <item name="textView3Color">#BAEEFF</item>
        <item name="buttonColor">#FFFFFF</item>
        <item name="buttonBackground">@drawable/button_background_dark</item>
        <item name="buttonLeftDrawable">@drawable/ic_launcher_android</item>
        <item name="toggleDrawable">@drawable/ic_action_toggle_theme_dark</item>
    </style>

    <style name="LightTheme" parent="android:Theme.Holo.Light">
        <item name="textView1Size">22sp</item>
        <item name="textView2Size">20sp</item>
        <item name="textView3Size">18sp</item>
        <item name="textView1Color">#005C12</item>
        <item name="textView2Color">#00821A</item>
        <item name="textView3Color">#00A321</item>
        <item name="buttonColor">#000000</item>
        <item name="buttonBackground">@drawable/button_background_light</item>
        <item name="buttonLeftDrawable">@drawable/ic_launcher_android</item>
        <item name="toggleDrawable">@drawable/ic_action_toggle_theme_light</item>
    </style>

</resources>